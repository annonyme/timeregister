<div style="background-color: white;">
	<div class="panel-heading">
		<h3>Your Groups <span class="badge">{{model.fullCount}}</span></h3>
	</div>
	<nav class="panel-body">
		<a href="index.php?page={{request.page}}&sub=editGroup&groupId=0" class="btn btn-primary">create new group</a>
	</nav>
	<div class="list-group">
		{% for group in model['ownGroups'] %}
			<a href="index.php?page={{request.page}}&sub=customers&groupId={{group.id}}" class="list-group-item">
				<span class="badge">owner</span>
				<h4 class="list-group-item-heading">{{group.name}}</h4>
				<p class="list-group-item-text">
					{{group.description}}
				</p>
			</a>
		{% endfor %}
		{% for group in model['memberGroups'] %}
			<a href="index.php?page={{request.page}}&sub=customers&groupId={{group.id}}" class="list-group-item">
				<h4 class="list-group-item-heading">{{group.name}}</h4>
				<p class="list-group-item-text">
					{{group.description}}
				</p>
			</a>
		{% endfor %}
	</div>
	<div class="panel-body">
		<form method="post" action="index.php?page={{request.page}}">
			<label for="invitationcode">Your invitation-Code:</label>
			<input type="text" maxlength="8" class="form-control" id="invitationcode" required placeholder="e.g. 12345678" name="invitationcode" value=""/>
			<input class="btn btn-primary" type="submit" value="send code"/>
		</form>
	</div>	
</div>