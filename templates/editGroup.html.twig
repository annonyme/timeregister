<div style="background-color: white;">
	<div class="panel-heading">
		<h3>Edit {{model.group.name}} (Invitation-Code: {{model.group.invitationCode}})</h3>
	</div>
	<nav class="panel-body">
		<a href="index.php?page={{request.page}}&sub=customers&groupId={{model.group.id}}" class="btn btn-warning">&lt;&lt; back</a>
	</nav>
	<div class="panel-body">	
		<form method="post" action="index.php?page={{request.page}}&sub=editGroup">
			<input type="hidden" name="groupId" value="{{model.group.id}}"/>
			<div class="form-group">
				<label for="groupName">Name</label>
				<input type="text" class="form-control" id="groupName" required placeholder="Name..." name="groupName" value="{{model.group.name}}"/>
			</div>
			<div class="form-group">
				<label for="groupDescription">Description</label>
				<input type="text" class="form-control" id="groupDescription" placeholder="Description..." name="groupDescription" value="{{model.group.description}}"/>
			</div>
			<button type="submit" class="btn btn-default">Save</button>
		</form>
	</div>
	{% if model.exists %}
	<div class="panel-body">
		<h4>Members:</h4>
	</div>
	<div class="panel-body">
		<form method="post" action="index.php?page={{request.page}}&sub=editGroup">
			<input type="hidden" name="groupId" value="{{model.group.id}}"/>
			<div class="form-group">
				<label for="userName">Add User</label>
				<input type="text" class="form-control" id="userName" list="userlist" required placeholder="user@example.com" name="userName" value=""/>
				<datalist id="userlist">
					{% if model.userlist %}
						{% for user in model.userlist %}
							<option value="{{user.email}}">{{user.name}}</option>
						{% endfor %}
					{% endif %}
				</datalist>
			</div>
			<button type="submit" class="btn btn-default">Add</button>
		</form>
	</div>
	<div class="list-group">	
		{% for member in model['members'] %}
			<div class="list-group-item">
				<p class="list-group-item-text">
					<a href="index.php?page={{request.page}}&sub=editGroup&groupId={{model.group.id}}&memberId={{member.id}}" class="btn btn-danger btn-sm" role="button">remove</a> {{member.name}}
				</p>
			</div>
		{% endfor %}
	</div>
	{% endif %}
</div>