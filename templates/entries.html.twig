<div style="background-color: white;">
	<div class="panel-heading">
		<h3>Time-Entries for {{model.customer.name}}</h3>
	</div>
	<nav class="panel-body">
		<a href="index.php?page={{request.page}}&sub=customers&groupId={{model.group.id}}" class="btn btn-warning">&lt;&lt; back</a>
		{% if model.isOwner %}
		<a href="index.php?page={{request.page}}&sub=editCustomer&customerId={{model.customer.id}}" class="btn btn-primary">
			edit {{model.customer.name}}
		</a>
		<a href="index.php?page={{request.page}}&sub=export&customerId={{model.customer.id}}" class="btn btn-success">
			Export CSV
		</a>
		{% endif %}
	</nav>
	<div class="list-group">
		<a href="index.php?page={{request.page}}&sub=mapCustomer&customerId={{model.customer.id}}" class="list-group-item">
			<span class="glyphicon glyphicon-flag"></span> Address on map		
		</a>
		{% if model.customer.email %}
		<a href="mailto:{{model.customer.email}}" class="list-group-item">
			<span class="glyphicon glyphicon-envelope"></span> Email: {{model.customer.email}}		
		</a>
		{% endif %}
		{% if model.customer.phone %}
		<a href="tel:{{model.customer.phone}}" class="list-group-item">
			<span class="glyphicon glyphicon-earphone"></span> Phone: {{model.customer.phone}}		
		</a>
		{% endif %}
	</div>
	<div class="panel-body">
		<form method="post" action="index.php?page={{request.page}}&sub=entries">
			<input type="hidden" name="customerId" value="{{model.customer.id}}"/>
			<input type="hidden" name="recordTime" value="true"/>
		{% if model.running %}
			<button class="btn btn-lg btn-danger time-rec" type="submit">Stop</button><br>
			<div class="form-group">
				<input type="text" class="time-rec-comment form-control" maxlength="25" name="timeComment" value="" placeholder="add a comment (max 25)" />
			</div>
		{% else %}
			<button class="btn btn-lg btn-success time-rec" type="submit">Start</button>
		{% endif %}
		</form>
	</div>
	<table class="table">
		<tr>
			<th>Group-User</th>
			<th>Start</th>
			<th>Stop</th>
			<th>Time</th>
			<th>Comment</th>
			<th>exported</th>
		</tr>
		{% for entry in model['entries'] %}
			<tr>
				<td>{{entry.username}}</td>
				<td>{{entry.date}}</td>
				<td>{{entry.dateEnd}}</td>
				<td>{{entry.time}}</td>
				<td>{{entry.model.comment}}</td>
				<td>{{entry.payed}}</td>
			</tr>
		{% endfor %}
	</table>
</div>